{
    "name": "lephare/hug",
    "license": "proprietary",
    "type": "project",
    "description": "Application console Symfony pour génération de fichier goss.yaml à partir d'un composer.json",
    "autoload": {
        "psr-4": {
           "Hug\\": "src"
        },
        "classmap": ["src"]
    },
    "autoload-dev": {
        "psr-4": {
            "Hug\\Tests\\": "tests/"
        }
    },
    "require": {
        "symfony/console": "^5.1",
        "symfony/filesystem": "^5.1",
        "php": ">=7.2",
        "symfony/yaml": "^5.1",
        "monolog/monolog": "^2.1",
        "ext-json": "*"
    },

    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "symfony/var-dumper": "^5.1",
        "phpstan/phpstan": "^0.12.26"
    },
    "scripts": {
        "lint:php-cs-fixer": "./vendor/bin/php-cs-fixer fix --stop-on-violation --config=.php_cs.dist -v --dry-run --using-cache=no --path-mode=intersection ./src ./tests",
        "fix": "./vendor/bin/php-cs-fixer fix --config=.php_cs.dist -v --using-cache=no --path-mode=intersection ./src ./tests",
        "lint:phpstan": "./vendor/bin/phpstan analyse -n --ansi --memory-limit=1G"
    }
}
